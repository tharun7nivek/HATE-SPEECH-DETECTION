{
    "manifest_version": 3,
    "name": "Hate Speech Detection Extension",
    "description": "A Chrome extension that predicts whether text is Hate Speech, Offensive Language, or Normal",
    "version": "1.0",
    "icons": {
      "16": "icon/hatespeech1.jpg",
      "48": "icon/icon48.jpg",
      "128": "icon/icon128.jpg"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://127.0.0.1:5000/"
    ],
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": ["popup.js"],
        "matches": ["http://*/*", "https://*/*"]
      }
    ]
  }
  